@model Entities.Dto.SignUpDto
@{
    ViewData["Title"] = "SignUp";
}

<form action="#" method="post">
    <div class="form-header">
        <h1>Welcome to Smart Car Park !</h1>
        <h3>Enter your informations to Sign Up</h3>
    </div>
    <div class="input-container">
        @Html.TextBoxFor(x => x.FirstName, new { placeholder = "Enter Name", @class = "form-control" })
        @Html.ValidationMessageFor(x => x.FirstName, "", new { @class = "text-danger" })
    </div>
    <div class="input-container">
        @Html.TextBoxFor(x => x.LastName, new { placeholder = "Enter Lastname", @class = "form-control" })
        @Html.ValidationMessageFor(x => x.LastName, "", new { @class = "text-danger" })
    </div>
    <div class="input-container">
        @Html.TextBoxFor(x => x.Email, new { placeholder = "Enter Email", @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
    </div>
    <div class="input-container">
        @Html.TextBoxFor(x => x.Password, new { placeholder = "Enter Password", @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
    </div>
    <div class="input-container">
        @Html.TextBoxFor(x => x.ConfirmPassword, new { placeholder = "Password Confirmation", @class = "form-control" })
        @Html.ValidationMessageFor(x => x.ConfirmPassword, "", new { @class = "text-danger" })
    </div>
    <div class="input-container">
        <input type="submit" value="Create Account">
    </div>

    <div class="link-container">
        <a href="/Home/Index">Login</a>
    </div>
</form>