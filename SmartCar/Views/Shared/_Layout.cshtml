<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Smart Car Park</title>
    <style>
        @@import url("https://fonts.googleapis.com/css?family=Quicksand|Roboto&display=swap");

        body {
            margin: 0;
            padding: 0;
            height: 100vh;
            background: #eeeeee;
            font-family: "Roboto", sans-serif;
        }

        .layer {
            height: 100%;
            width: 100%;
            background: #000;
            opacity: 0.4;
        }

        form {
            background: #ffffff;
            opacity: 0.85;
            padding: 40px;
            width: 350px;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            border-radius: 6px;
        }

        .form-header {
            text-align: center;
            margin-bottom: 20px;
        }

            .form-header img {
                height: 80px;
            }

            .form-header h1,
            .form-header h3 {
                margin: 10px;
                font-weight: 100;
                font-family: "Quicksand", sans-serif;
            }

        .input-container {
            margin: 30px 0;
        }

            .input-container input {
                height: 40px;
                width: 100%;
                outline: none;
                font-size: 17px;
                padding: 10px;
                box-sizing: border-box;
                background: #fafafa;
                border: solid 1px #dddddd;
            }

                .input-container input:focus {
                    background: #e5e5e5;
                }

                .input-container input[type="submit"] {
                    background: #2a189d;
                    color: #fff;
                    cursor: pointer;
                    border: none;
                }

                    .input-container input[type="submit"]:hover {
                        background: #1472be;
                    }

        .link-container a {
            color: #110f0f;
            text-decoration: none;
        }

        .link-container {
            margin-top: 10px;
        }
    </style>
</head>

<body data-vide-bg="~/img/car1.mp4">
    <div class="layer"></div>
    <form>
        <div class="form-header">

            <h1>List of Car Parks</h1>
        </div>
        <div class="link-container">

            <ol>
                <li><a href="carpark1.html">Car Park A</a></li>
                <br>
                <li><a href="carpark2.html">Car Park B</a></li>
            </ol>

        </div>
    </form>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
            referrerpolicy="no-referrer"></script>
    <script src="~/js/jquery.vide.js"></script>
</body>

</html>
@RenderBody()